@using DemoMVC.ViewModel
@model ProductoViewModel

<h2>Productos</h2>
<p>
    <a class="btn btn-success" asp-action="Create">Nuevo Producto</a>
</p>
<div class="row">
    <form asp-action="Index" asp-controller="Producto" method="get">
        <p>

            Nombre: <input type="text" asp-for="SearchText" placeholder="Buscar producto por nombre" />
            <input type="submit" value="Buscar" class="btn btn-info" />
        </p>
    </form>
</div>




<div class="row">
    <table class="table table-dark table-striped">
        <thead>
            
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Categoria</th>
                <th>Proveedor</th>
                <th></th>
            </tr>
           

        </thead>
        <tbody>
            @foreach (var item in Model.Productos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"
                            onclick="showConfirmAcctionEdit(event,@item.Id)">Editar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                            onclick="showConfirmAcctionDelete(event,@item.Id)">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
@section Scripts {
   <script src="~/js/producto.js"></script>
}
